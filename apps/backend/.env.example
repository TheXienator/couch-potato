# Local development database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/couch_potato

# Production database (optional - for viewing production DB with `pnpm db:studio:production`)
# Get this from Render dashboard, Look for "External Database URL"
PRODUCTION_DATABASE_URL=your-secret-postgresql-url

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
JWT_SECRET=your-secret-key-min-32-chars-generate-random
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-generate-random

# Server config
FRONTEND_URL=http://localhost:5173
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
